[alias] 
    st = status
    ci = commit
    co = checkout
    w = whatchanged

[color] 
    diff = auto
    interactive = auto
    status = auto
    branch = auto
    blame = auto

[color "diff"]
        meta = yellow bold
        frag = magenta bold
        old = red bold
        new = green bold
[gui]
	fontui = -family Monaco -size 14 -weight normal -slant roman -underline 0 -overstrike 0
	fontdiff = -family Monaco -size 14 -weight normal -slant roman -underline 0 -overstrike 0
[core]
	editor = mvim -f
	quotepath = false
